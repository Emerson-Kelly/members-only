<div class="navbar bg-white/[.7] drop-shadow-sm fixed z-10">
    <div class="flex-1">
        <a href="/" class="btn btn-ghost text-xl text-primary opacity-70">Members Only</a>
    </div>

    <% if (user) { %>
        <div class="dropdown dropdown-end">
            <div tabindex="0" role="button" class="btn btn-ghost btn-rectangle avatar">
                <ul class="text-accent-content text-lg">
                    <li>
                        <%= user.first_name %>
                    </li>
                </ul>
            </div>
            <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
                <li><a href="/members-only">Members</a></li>
                <li><a href="/admin">Admin</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
        <% } else { %>
            <div class="flex gap-4">
                <a href="/sign-up" class="btn btn-outline">Sign Up</a>
                <a href="/login" class="btn btn-outline">Login</a>
            </div>
            <% } %>
</div>
</div>