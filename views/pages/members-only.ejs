<!doctype html>
<html data-theme="light">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/stylesheets/style.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/output.css">
  <title>Members Only</title>
</head>

<body>
    <%- include('../partials/navbar') %>
    <!--<div class="hero min-h-screen bg-gradient-to-br from-blue-50 via-indigo-100 to-cyan-100">-->
    <div class="hero min-h-screen bg-base-200">
    <div class="hero-content flex-col w-full max-w-xl">
      <div class="text-center">
        <h1 class="text-5xl font-bold">Join the Club!</h1>
        <p class="py-6 text-lg">
          Become a member of our exclusive community where like-minded people share ideas, stories, and inspiration.
          Signing up only takes a moment — and it's totally worth it.
        </p>
        <div class="stats shadow mb-4">
            <div class="stat">
              <div class="stat-title mb-2">Use this password:</div>
              <div class="stat-value text-base">exclusivemember123</div>
            </div>
          </div>
      </div>

      <div class="card bg-base-100 w-full shadow-2xl">
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="alert alert-error p-4 mb-4 text-red-700 bg-red-100 border border-red-300 rounded">
              <ul>
                <% errors.forEach(error => { %>
                  <li><%= error.msg %></li>
                <% }); %>
              </ul>
            </div>
          <% } %>
        <form class="card-body" method="POST" action="/members-only">
          <div class="form-control">
            <label class="label" for="members-onlyd">
              <span class="label-text">Password</span>
            </label>
            <input type="password" name="members-only" placeholder="••••••••" class="input input-bordered" required />
          </div>
          <div class="form-control mt-6">
            <button type="submit" class="btn btn-primary">Get Insider Access</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>

</html>
